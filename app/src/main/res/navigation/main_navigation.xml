<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.delivero.customer.home.HomeFragment"
        android:label="Delivero"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_pickupAndDropOffFragment"
            app:destination="@id/pickupAndDropOffFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/pickupAndDropOffFragment"
        android:name="com.delivero.customer.home.PickupAndDropOffFragment"
        android:label="Pickup and Destination"
        tools:layout="@layout/fragment_pickup_and_drop_off">
        <argument
            android:name="vehicleType"
            app:argType="com.delivero.customer.models.VehicleTypes" />
        <action
            android:id="@+id/action_pickupAndDropOffFragment_to_packageDetailsFragment"
            app:destination="@id/packageDetailsFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/packageDetailsFragment"
        android:name="com.delivero.customer.home.PackageDetailsFragment"
        android:label="Package Details"
        tools:layout="@layout/package_details_fragment">
    <argument
        android:name="vehicleType"
        app:argType="com.delivero.customer.models.VehicleTypes" />
        <argument
            android:name="latitude"
            app:argType="float" />
        <argument
            android:name="longitude"
            app:argType="float" />
        <argument
            android:name="latitude2"
            app:argType="float" />
        <argument
            android:name="longitude2"
            app:argType="float" />
        <action
            android:id="@+id/action_packageDetailsFragment_to_riderSelectionFragment"
            app:destination="@id/riderSelectionFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
        <argument
            android:name="pickup"
            app:argType="string" />
        <argument
            android:name="destination"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/riderSelectionFragment"
        android:name="com.delivero.customer.home.RiderSelectionFragment"
        android:label="Select A Driver"
        tools:layout="@layout/fragment_rider_selection">
        <argument
            android:name="request"
            app:argType="com.delivero.customer.models.Request" />
    </fragment>
    <fragment
        android:id="@+id/riderDetailsFragment"
        android:name="com.delivero.customer.auth.RiderDetailsFragment"
        android:label="Add a service"
        tools:layout="@layout/fragment_driver_details"/>
    <fragment
        android:id="@+id/requestsFragment"
        android:name="com.delivero.customer.home.RequestsFragment"
        android:label="My Bookings"
        tools:layout="@layout/recycler_layout"/>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.delivero.customer.home.ProfileFragment"
        android:label="My Profile"
        tools:layout="@layout/fragment_profile"/>
</navigation>