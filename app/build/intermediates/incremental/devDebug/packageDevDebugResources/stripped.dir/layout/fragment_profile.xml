<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
<View
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@color/secondary"/>
    <View
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/center1"/>
    <View
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:background="@drawable/curved_top_white"
        android:layout_toStartOf="@+id/center1"
        android:layout_marginTop="100dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/curved_top_white"
        android:layout_toEndOf="@+id/center1"
        android:layout_marginTop="100dp"/>
    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:shapeAppearanceOverlay="@style/Theme.Delivero.CircleImage"
        android:src="@mipmap/ic_launcher"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:id="@+id/avatar"/>
    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/avatar"
        tools:text="Brian Omondi"
        android:id="@+id/userName"
        android:layout_margin="10dp"/>
    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/avatar"
        tools:text="0748250339"
        android:id="@+id/phoneNumber"
        android:layout_alignParentEnd="true"
        android:layout_margin="10dp"/>
    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phoneNumber"
        android:layout_margin="10dp"
        android:padding="15dp"
        android:id="@+id/changeProfile"
        android:text="Change Profile Picture"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"/>
    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:indicatorSize="70dp"
        app:trackThickness="10dp"
        app:indicatorColor="@color/secondary"
        app:trackColor="@color/quantum_grey300"
        android:indeterminate="true"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:id="@+id/progress"/>
</RelativeLayout>