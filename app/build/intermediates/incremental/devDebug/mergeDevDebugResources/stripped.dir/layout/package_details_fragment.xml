<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<!--384-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/bg_grey_stroke_1">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/hideFor">
       <com.google.android.material.textfield.TextInputLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:id="@+id/weightLayout"
           android:layout_margin="10dp"
           android:hint="Aproximate package weight (Kilograms)"
           app:boxBackgroundColor="@color/secondaryFaded">
           <com.google.android.material.textfield.TextInputEditText
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:inputType="numberDecimal"
               android:id="@+id/weightInput"/>
       </com.google.android.material.textfield.TextInputLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/weightLayout"
            android:background="@color/quantum_grey300"
            android:id="@+id/div2"/>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/pickupDateLayout"
            android:layout_margin="10dp"
            android:layout_below="@+id/div2"
            android:hint="Pickup Date"
            app:boxBackgroundColor="@color/secondaryFaded">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:focusable="false"
                android:id="@+id/pickupDate"/>
        </com.google.android.material.textfield.TextInputLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/pickupDateLayout"
            android:background="@color/quantum_grey300"
            android:id="@+id/div3"/>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/timeLayout"
            android:layout_margin="10dp"
            android:hint="Pick up time"
            android:layout_below="@+id/div3"
            app:boxBackgroundColor="@color/secondaryFaded">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="time"
                android:focusable="false"
                android:id="@+id/pickupTime"/>
        </com.google.android.material.textfield.TextInputLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/timeLayout"
            android:background="@color/quantum_grey300"
            android:id="@+id/div4"/>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/typeLayout"
            android:layout_margin="10dp"
            android:focusable="false"
            android:layout_below="@id/div4"
            android:hint="Package Type"
            app:boxBackgroundColor="@color/secondaryFaded">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:focusable="false"
                android:drawableEnd="@drawable/baseline_arrow_drop_down_24"
                android:id="@+id/pickupType"/>
        </com.google.android.material.textfield.TextInputLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/typeLayout"
            android:background="@color/quantum_grey300"
            android:id="@+id/div5"/>
        </RelativeLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/descriptionLayout"
            android:layout_margin="10dp"
            android:layout_below="@+id/hideFor"
            android:hint="Package Description"
            app:boxBackgroundColor="@color/secondaryFaded"
           >
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minLines="4"
                android:maxLines="10"
                android:inputType="textMultiLine"
                android:id="@+id/packageDescription"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.button.MaterialButton
            android:layout_width="320dp"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginBottom="10dp"
            android:layout_below="@id/descriptionLayout"
            android:id="@+id/btnNext"
            android:text="Next"/>
    </RelativeLayout>
</RelativeLayout>