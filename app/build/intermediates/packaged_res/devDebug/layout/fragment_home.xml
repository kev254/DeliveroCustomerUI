<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        app:shapeAppearanceOverlay="@style/Theme.Delivero.RoundedImage"
        android:src="@drawable/person_pin"
        android:id="@+id/avatar"/>
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello Tim"
            android:id="@+id/userName"
            android:fontFamily="@font/poppins_bold"
            android:textStyle="bold"
            android:layout_toEndOf="@+id/avatar"
            android:layout_margin="5dp"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"/>
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Let's Book You A Service"
            android:id="@+id/book"
            android:layout_below="@+id/userName"
            android:layout_toEndOf="@+id/avatar"
            android:layout_marginStart="5dp"
            android:layout_marginTop="-6dp"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            android:textColor="@color/quantum_grey600"/>

    </RelativeLayout>
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabIconTint="@null"
        app:tabGravity="fill"/>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="gone"
        android:layout_weight="1"/>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="2dp"
        app:cardCornerRadius="5dp"
        android:layout_margin="10dp">

        <RelativeLayout
            android:id="@+id/del"
            android:layout_width="match_parent"
            android:padding="5dp"
            android:layout_height="200dp">
            <TextView
                android:id="@+id/delview"
                android:textAlignment="center"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Delivery"
                android:fontFamily="@font/poppins_medium"
                android:textSize="15dp"
                android:drawableRight="@drawable/person_pin"
                android:layout_margin="5dp"
                android:background="@drawable/bg_grey_rounded"
                android:layout_alignParentEnd="true"/>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_below="@+id/delview"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                tools:listitem="@layout/vehicle_item"
                android:id="@+id/vehicleListRecycler"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                app:spanCount="1"/>
            <com.google.android.material.progressindicator.CircularProgressIndicator
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:indicatorSize="70dp"
                app:trackThickness="10dp"
                app:indicatorColor="@color/secondary"
                app:trackColor="@color/quantum_grey300"
                android:indeterminate="true"
                android:layout_centerInParent="true"
                android:visibility="gone"
                android:id="@+id/progress"/>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="2dp"
        app:cardCornerRadius="5dp"
        android:layout_margin="10dp">


        <RelativeLayout
            android:id="@+id/br"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="200dp">
            <TextView
                android:id="@+id/brview"
                android:textAlignment="center"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Breakdown"
                android:fontFamily="@font/poppins_medium"
                android:textSize="13dp"
                android:drawableRight="@drawable/person_pin"
                android:layout_margin="5dp"
                android:background="@drawable/bg_grey_rounded"
                android:layout_alignParentEnd="true"/>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_below="@+id/brview"
                android:id="@+id/vehicleListRecycler2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                app:spanCount="1"
                tools:listitem="@layout/vehicle_item"/>

            <com.google.android.material.progressindicator.CircularProgressIndicator
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:indicatorSize="70dp"
                app:trackThickness="10dp"
                app:indicatorColor="@color/secondary"
                app:trackColor="@color/quantum_grey300"
                android:indeterminate="true"
                android:layout_centerInParent="true"
                android:visibility="gone"
                android:id="@+id/progress2"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="2dp"
        app:cardCornerRadius="5dp"
        android:layout_margin="10dp">


        <RelativeLayout
            android:id="@+id/er"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="200dp">
            <TextView
                android:id="@+id/emview"
                android:textAlignment="center"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Emergency"
                android:fontFamily="@font/poppins_medium"
                android:textSize="13dp"
                android:drawableRight="@drawable/person_pin"
                android:layout_margin="5dp"
                android:background="@drawable/bg_grey_rounded"
                android:layout_alignParentEnd="true"/>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_below="@+id/emview"
                android:id="@+id/vehicleListRecycler3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                app:spanCount="1"
                tools:listitem="@layout/vehicle_item"/>

            <com.google.android.material.progressindicator.CircularProgressIndicator
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:indicatorSize="70dp"
                app:trackThickness="10dp"
                app:indicatorColor="@color/secondary"
                app:trackColor="@color/quantum_grey300"
                android:indeterminate="true"
                android:layout_centerInParent="true"
                android:visibility="gone"
                android:id="@+id/progress3"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    </LinearLayout>



</ScrollView>